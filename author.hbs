{{!< default}}

<div class="it-page">
    <div class="it-container">

        {{#author}}
        {{#if cover_image}}
    	            <figure class="user-cover rounded-xl" style="background-image: url({{cover_image}});">
    	                
    	            </figure>
    	        {{/if}}
            <header class="flex flex-col">
    	        <div class="flex items-center self-center justify-center my-8 {{#if cover_image}} absolute top-[30rem] left-0 right-0{{/if}} ">
    	            {{#if profile_image}}
                        <img src="{{profile_image}}" alt="{{name}}" class="rounded-full h-40 w-40 border-4" />
                    {{else}}
                        {{> "icons/user"}} {{!-- partials/icons/user.hbs --}}
                    {{/if}}
    	        </div>
                <h1 class="it-title text-center {{#if cover_image}}mt-8{{/if}}">{{name}}</h1>
                {{#if bio}}
                    <p class="it-excerpt text-center">{{bio}}</p>
                {{/if}}
    
                <div class="it-author-meta">
                    <div class="it-author-links">
                        {{#if location}}
                            <a href="#" target="_blank" rel="noopener">{{> "icons/pin"}} {{location}}</a>
                        {{/if}}
                        {{#if website}}
                            <a href="{{website}}" target="_blank" rel="noopener">{{> "icons/link"}}</a>
                        {{/if}}
                        {{#if twitter}}
                            <a href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                        {{/if}}
                        {{#if facebook}}
                            <a href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                        {{/if}}
                    </div>
                </div>
                
            </header>
        {{/author}}

        <div class="it-postfeed it-canvas">
            {{> "loop"}} {{!-- partials/loop.hbs --}}
        </div>
        
        {{pagination}} {{!-- partials/pagination.hbs --}}

    </div>
</div>